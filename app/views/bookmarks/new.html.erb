<%= render "navbar" %>

<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>Add a new signet</h1>
        <div class="mt-3">

          <%= simple_form_for [@list, @signet] do |f| %>
            <%= f.input :comment %>
            <%= f.submit class: "btn btn-primary"%>
          <% end %>

          <%= link_to "Cancel and go back to List", list_path(@list), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "navbar" %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/?cinema);">
  <div class="container text-center">
    <h1>Movies</h1>
  </div>
</div>

<div class="container">

<div class="cards">
  <% @movies.each do |movie| %>
    <div class="card">
      <%= link_to movie.title, movie_path(movie),class: "card-category", style: "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(#{movie.poster_url})"  %>
    </div>
  <% end %>
</div>

</div>
